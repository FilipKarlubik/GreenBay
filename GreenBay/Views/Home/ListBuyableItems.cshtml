@using GreenBay.Models.DTOs
@model IEnumerable<ItemInfoDto>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show Buyable Items</title>
    <style>
        .tit {
            border: dotted black;
            padding: 5px;
            background-color: darkgrey;
            text-decoration: none;
            color: black;
        }
        .circular_image {
            float: left;
            height: 100px;
            border: 5px;
            overflow: hidden;
            border-radius: 50%;
            width: 100px;
            border: solid blue;
        }
        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
</head>
<body>
    <a href="/">Home</a>
    <h3>List Of Buyable Products, ready for you, @ViewBag.name</h3>
    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>CreatedAt</th>
            <th>Price</th>
            <th>Image</th>
            <th>SellingBy</th>
            <th>HighestBid</th>
            <th>HighestBidBy</th>
        </tr>
        @foreach (ItemInfoDto item in Model)
        {
        <tr>
            <td>@item.Id</td>
            <td>@item.Name</td>
            <td>@item.Description</td>
            <td>@item.CreatedAt</td>
            <td>@item.Price</td>
            <td><img class="circular_image" src="@item.ImageUrl"></td>
            <td>@item.SellingBy</td>
            <td>@item.HighestBid</td>
            <td>@item.HighestBidBy</td>
        </tr>
        }
    </table>
    <h3>You have @ViewBag.money Money</h3>
</body>
</html>