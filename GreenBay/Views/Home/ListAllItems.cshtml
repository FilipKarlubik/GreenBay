@using GreenBay.Models.DTOs
@model IEnumerable<ItemInfoDto>
<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Show All Items</title>
    <style>
        .tit {
            border: dotted black;
            padding: 5px;
            background-color: darkgrey;
            text-decoration: none;
            color: black;
        }

        .circular_image {
            float: left;
            height: 100px;
            border: 5px;
            overflow: hidden;
            border-radius: 50%;
            width: 100px;
            border: solid blue;
        }

        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
</head>
<body>
    <a class="tit" href=" /">Home</a>
    <a class="tit" href="/create">Create new User</a>
    <a class="tit" href="/login">Login</a>
    <a class="tit" href="/buyable">Only Buyable Products</a>
    <a class="tit" href="/sellable">Only Not Sold Products</a>
    <a class="tit" href="/all">All Products</a>
    <a class="tit" href="/add">Add Product</a>
    <a class="tit" href="/email">Forgotten Password</a>
    <a class="tit" href="/info">User Info</a>
    <a class="tit" href="/money">Manage Money</a>
    <a class="tit" href="/users">Users List</a>
    <a class="tit" href="/bid">Bid</a>

    <h3>List of all products, here you can see them, @ViewBag.name. You have @ViewBag.money Dollars.</h3>
    <form method="get" action="/all">
        <label for="search">Search Bar</label>
        <input type="text" name="search" id="search" required>
        <input type="submit" value="Search">
    </form>
    <table>
        <tr>
            <th>Id</th>
            <th>Name</th>
            <th>Description</th>
            <th>CreatedAt</th>
            <th>Price</th>
            <th>Image</th>
            <th>SellingBy</th>
            <th>HighestBid</th>
            <th>HighestBidBy</th>
            <th>BoughtBy</th>
        </tr>
        @foreach (ItemInfoDto item in Model)
        {
            <tr>
                <td>@item.Id</td>
                <td>@item.Name</td>
                <td>@item.Description</td>
                <td>@item.CreatedAt</td>
                <td>@item.Price</td>
                <td><img class="circular_image" src="@item.ImageUrl"></td>
                <td>@item.SellingBy</td>
                <td>@item.HighestBid</td>
                <td>@item.HighestBidBy</td>
                <td>@item.BoughtBy</td>
            </tr>
        }
    </table>
</body>
</html>