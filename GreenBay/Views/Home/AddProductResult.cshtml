@using GreenBay.Models.DTOs
@model ResponseItemObjectDto

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create User Page</title>
    <style>
        .tit {
            border: dotted black;
            padding: 5px;
            background-color: darkgrey;
            text-decoration: none;
            color: black;
        }

        .circular_image {
            float: left;
            height: 100px;
            border: 5px;
            overflow: hidden;
            border-radius: 50%;
            width: 100px;
            border: solid blue;
        }

        table, th, td {
            border: 1px solid black;
            border-collapse: collapse;
        }
    </style>
</head>
<body>
    <a class="tit" href=" /">Home</a>
    <a class="tit" href="/create">Create new User</a>
    <a class="tit" href="/login">Login</a>
    <a class="tit" href="/buyable">Only Buyable Products</a>
    <a class="tit" href="/sellable">Only Not Sold Products</a>
    <a class="tit" href="/all">All Products</a>
    <a class="tit" href="/add">Add Product</a>
    <a class="tit" href="/email">Forgotten Password</a>
    <h3>Add Product Result Page</h3>

    @if (Model.StatusCode == 201)
    {
        <h4>@Model.Message</h4>
        <table>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>CreatedAt</th>
                <th>Price</th>
                <th>Image</th>
                <th>SellingBy</th>
            </tr>
            <tr>
                <td>@Model.ItemInfo.Id</td>
                <td>@Model.ItemInfo.Name</td>
                <td>@Model.ItemInfo.Description</td>
                <td>@Model.ItemInfo.CreatedAt</td>
                <td>@Model.ItemInfo.Price</td>
                <td><img class="circular_image" src="@Model.ItemInfo.ImageUrl"></td>
                <td>@Model.ItemInfo.SellingBy</td>  
            </tr>
        </table>
    }
    else
    {
        <h4 style="color:red">@Model.Message</h4>
    }
</body>
</html>